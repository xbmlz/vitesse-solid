{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "types": ["vite/client", "@testing-library/jest-dom"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "types": ["vitest"],
  "exclude": ["node_modules", "add-ts-nocheck.cjs", "dist"]
}
